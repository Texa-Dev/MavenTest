<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.example.models.User" table="Users" schema="testdb">
        <id name="id" column="id" type="int">
            <generator class="native"/>
        </id>
        <property name="name" column="name" type="java.lang.String" length="50" not-null="true"/>
        <property name="birthDate" column="birth_date" type="java.time.LocalDate"/>
        <property name="activated" column="activated" type="boolean" />
        <property name="amount" column="amount" type="int"/>
    </class>
</hibernate-mapping>

